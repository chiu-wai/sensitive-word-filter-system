<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensitive.wordfilter.mapper.FilterRecordMapper">

    <resultMap id="BaseResultMap" type="com.sensitive.wordfilter.entity.FilterRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="original_text" property="originalText" jdbcType="LONGVARCHAR"/>
        <result column="filtered_text" property="filteredText" jdbcType="LONGVARCHAR"/>
        <result column="sensitive_words" property="sensitiveWords" jdbcType="LONGVARCHAR"/>
        <result column="filter_count" property="filterCount" jdbcType="INTEGER"/>
        <result column="ip_address" property="ipAddress" jdbcType="VARCHAR"/>
        <result column="user_agent" property="userAgent" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, original_text, filtered_text, sensitive_words, filter_count, ip_address, user_agent, create_time
    </sql>

    <!-- 插入过滤记录 -->
    <insert id="insert" parameterType="com.sensitive.wordfilter.entity.FilterRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO filter_record (original_text, filtered_text, sensitive_words, filter_count, ip_address, user_agent, create_time)
        VALUES (#{originalText}, #{filteredText}, #{sensitiveWords}, #{filterCount}, #{ipAddress}, #{userAgent}, NOW())
    </insert>

    <!-- 分页查询过滤记录 -->
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM filter_record
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 查询过滤记录总数 -->
    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM filter_record
    </select>

    <!-- 根据IP地址查询过滤记录 -->
    <select id="selectByIpAddress" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM filter_record
        WHERE ip_address = #{ipAddress}
        ORDER BY create_time DESC
    </select>

    <!-- 根据时间范围查询过滤记录 -->
    <select id="selectByTimeRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM filter_record
        WHERE create_time BETWEEN #{startTime} AND #{endTime}
        ORDER BY create_time DESC
    </select>

    <!-- 删除指定时间之前的记录 -->
    <delete id="deleteByTimeBefore">
        DELETE FROM filter_record
        WHERE create_time &lt; #{time}
    </delete>

</mapper> 